{
    "dashboard": {
        "id": null,
        "title": "WasteWise System Health",
        "tags": [
            "templated"
        ],
        "timezone": "browser",
        "schemaVersion": 16,
        "version": 0,
        "refresh": "5s",
        "panels": [
            {
                "title": "CPU Usage",
                "type": "graph",
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 0
                },
                "targets": [
                    {
                        "expr": "rate(process_cpu_seconds_total[1m])",
                        "legendFormat": "Backend CPU"
                    }
                ]
            },
            {
                "title": "Memory Usage",
                "type": "graph",
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 0
                },
                "targets": [
                    {
                        "expr": "process_resident_memory_bytes",
                        "legendFormat": "Backend Memory"
                    }
                ]
            }
        ]
    }
}